shred --verbose --random-source=/dev/zero --iterations=3 /dev/sda

loadkeys trq

cfdisk /dev/sda

/dev/sda1 #1G
/dev/sda2 #%100
cryptsetup --cipher twofish-xts-plain64 --hash sha512 --key-size 256 luksFormat /dev/sda2
cryptsetup luksDump /dev/sda2
cryptsetup luksOpen /dev/sda2 crypto
lvmdiskscan
pvcreate /dev/mapper/crypto
pvdisplay
vgcreate VolGroup00 /dev/mapper/crypto
vgdisplay
lvcreate -C y -L 2GB VolGroup00 -n lvolswap
lvcreate -L 25GB VolGroup00 -n lvolroot
lvcreate -l +100%FREE VolGroup00 -n lvolhome
lvdisplay
vgscan
vgchange -ay
mkfs.ext4 /dev/sda1
mkswap /dev/mapper/VolGroup00-lvolswap
mkfs.ext4 /dev/mapper/VolGroup00-lvolroot
mkfs.ext4 /dev/mapper/VolGroup00-lvolhome
swapon /dev/mapper/VolGroup00-lvolswap
mount /dev/mapper/VolGroup00-lvolroot /mnt
mkdir /mnt/boot
mount /dev/sda1 /mnt/boot
mkdir /mnt/home
mount /dev/mapper/VolGroup00-lvolhome /mnt/home
lsblk /dev/sda

pacstrap -i /mnt base base-devel grub-bios

genfstab -U -p /mnt >> /mnt/etc/fstab

arch-chroot /mnt /bin/bash

/etc/locale.gen
#en_US.UTF-8 UTF-8
#en_US ISO-8859-1

locale-gen

echo LANG=en_US.UTF-8 > /etc/locale.conf

ln -s /usr/share/zoneinfo/Europe/Istanbul /etc/localtime

timedatectl set-ntp true

hwclock --systohc --utc

echo arch > /etc/hostname

nano /etc/mkinitcpio.conf

# HOOKS= block... encrypt lvm2 resume ...filesystems

mkinitcpio -p linux

passwd

nano /etc/default/grub

GRUB_ENABLE_CRYPTODISK=y
GRUB_CMDLINE_LINUX="cryptdevice=/dev/sda2:VolGroup00 resume=/dev/VolGroup00/lvolswap"

grub-install --target=i386-pc --recheck /dev/sda
grub-mkconfig -o /boot/grub/grub.cfg

pacman -S dialog wpa_supplicant xorg-server xorg-xinit mesa xterm xorg-twm xorg-xclock xf86-video-intel xf86-video-nouveau xf86-video-vesa xf86-input-synaptics xcursor-vanilla-dmz-aa

nano /usr/share/X11/xorg.conf.d/10-evdev.conf
# Option "XkbLayout" "tr"

exit
umount /mnt/home
umount /mnt/boot
umount /mnt
shutdown -h now

ln -s /etc/fonts/conf.avail/70-no-bitmaps.conf /etc/fonts/conf.d/
